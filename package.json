{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:watch": "vitest --watch",
        "lint": "eslint resources/js --ext .js,.vue --report-unused-disable-directives --max-warnings 10",
        "lint:fix": "eslint resources/js --ext .js,.vue --fix",
        "lint:php": "/usr/local/opt/php@8.2/bin/php vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "lint:php:fix": "/usr/local/opt/php@8.2/bin/php vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "format": "prettier --write \"resources/js/**/*.{js,vue}\"",
        "format:check": "prettier --check \"resources/js/**/*.{js,vue}\""
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@inertiajs/vue3": "^2.0.0",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/test-utils": "^2.4.6",
        "autoprefixer": "^10.4.12",
        "axios": "^1.10.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.30.0",
        "jsdom": "^26.1.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.31",
        "prettier": "^3.3.3",
        "tailwindcss": "^3.2.1",
        "vite": "^6.2.4",
        "vitest": "^3.2.4",
        "vue": "^3.4.0"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.23",
        "@heroicons/vue": "^2.2.0",
        "pinia": "^3.0.3"
    }
}
